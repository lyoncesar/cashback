
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <%= image_tag('logo.png', class: 'mb-4', width: '72', height: '72') %>
  <h2 class="h3 mb-4 font-weight-normal">Edit <%= resource_name.to_s.humanize %></h2>

  <%= f.label :email , class: 'sr-only' %>
  <%= f.email_field :email, placeholder: 'Email', autofocus: true, autocomplete: "email", class: 'form-control my-2' %>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <%= f.label :password, class: 'sr-only'%>
  <%= f.password_field :password, placeholder: minimum_password_length(@minimum_password_length), autocomplete: "new-password", class: 'form-control my-2' %>

  <%= f.label :password_confirmation, class: 'sr-only' %>
  <%= f.password_field :password_confirmation, placeholder: 'Password confirmation', autocomplete: "new-password", class: 'form-control my-2' %>

  <%= f.label :current_password, class: 'sr-only' %>
  <%= f.password_field :current_password, placeholder: 'Current password', autocomplete: "current-password", class: 'form-control my-2' %>

  <div class="actions">
    <%= f.submit "Update", class: 'btn btn-og btn-primary btn-block my-3' %>
  </div>
<% end %>

<%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?\r\nThis action can't be undone" }, method: :delete, class: 'btn btn-link btn- btn-block my-3' %>

<%= link_to "Back", :back %>
