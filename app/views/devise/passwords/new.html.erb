<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <%= image_tag('logo.png', :class => 'mb-4', :width => '72', :height => '72') %>
  <h2 class="h3 mb-4 font-weight-normal"><%= t('users.forgot_password') %></h2>

  <%= f.label :email, class: 'sr-only' %>
  <%= f.email_field :email, placeholder: t('users.email'), autofocus: true, autocomplete: "email", class: 'form-control' %>

  <div class="actions">
    <%= f.submit t('users.send_reset_password'), class: 'btn btn-lg btn-primary btn-block my-2' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
