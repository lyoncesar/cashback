<div class="row mx-auto text-center align-items-center" style="width: 300px; height: 100vh">
  <div class="form-signin col-md-12">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

      <%= image_tag('logo.png', :class => 'mb-4', :width => '72', :height => '72') %>
      <h2 class="h3 mb-4 font-weight-normal">Log in</h2>

      <%= f.label :email, :class => 'sr-only' %>
      <%= f.email_field :email, placeholder: 'Email', autofocus: true, autocomplete: "email", class: 'form-control my-2' %>

      <%= f.label :password, :class => 'sr-only' %>
      <%= f.password_field :password, placeholder: 'Password', autocomplete: "current-password", class: 'form-control my-2' %>

      <% if devise_mapping.rememberable? %>
        <div class="checkbox mt-2">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Log in", class: 'btn btn-lg btn-primary btn-block my-2' %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>

  </div>
</div>
