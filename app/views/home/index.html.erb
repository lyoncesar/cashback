<%= admin_offers %>
<h1>Todays Offers</h1>

<div class="row row-cols-1 row-cols-md-2">
  <% @offers.each do |offer| %>
    <div class="col mb-4">
      <div class="card text-center" style="width: 18rem;">
        <div class="card-body">
          <h4 class="card-title"><%= offer.advertiser_name %></h4>
          <p class "card-text"></p>
          <%= link_to 'Shop Now', offer.url, class: 'btn btn-primary' %>
        </div>
      </div>
    </div>
  <% end %>
</div>
