<div class="mt-3 mb-4">
  <%= admin_offers %>
  <h1>Todays Offers</h1>
</div>

<div class="row row-cols-1 row-cols-md-2">
  <% @offers.each do |offer| %>
    <div class="col mb-4">
      <div class="card text-center rounded w-100 p-3">
        <div class="card-body">
          <h4 class="card-title"><%= offer.advertiser_name %></h4>
          <p class "card-text"></p>
          <%= link_to 'Shop Now', offer.url, class: 'btn btn-sm btn-primary w-50 p-3' %>
        </div>
      </div>
    </div>
  <% end %>
</div>
